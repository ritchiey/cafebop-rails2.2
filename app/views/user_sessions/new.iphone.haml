.panel{ :title => "Cafebop", :selected => "true" }
  %h2
    Login
  %p
    Please login

  - semantic_form_for @user_session do |f|
    = f.error_messages :header_message=>nil, :message=>nil
    -f.inputs do
      = f.input :email, :required=>false
      = f.input :password, :as=>:password, :required=>false

    - f.buttons do
      =f.commit_button "Login"

    = link_to "Forgot password", new_password_reset_path
