-if @queue.active
  Queue is currently accepting orders.
  =button_to_remote "Stop Accepting Orders", :url=>stop_customer_queue_path(@queue), :method=>:put, :update=>'queue_status'
-else
  Queue is not accepting orders.
  =button_to_remote "Start Accepting Orders", :url=>start_customer_queue_path(@queue), :method=>:put, :update=>'queue_status'
