-content_for :javascript do
  :javascript
    make_sortable('menu-items', 'menus', '#{@menu.id}');

%h3=@menu.generic? ? "Edit Generic Menu" : "Edit Menu"

=render :partial => 'back'
=link_to "Delete Menu", menu_path(@menu), :method=>:delete, :confirm=>"Deleting this menu will destroy all items in this menu. Are you sure?"
=render :partial=>'form', :object=>@menu

%hr

%h4 Menu Items

%ul#menu-items-list=render :partial=>'menu_items/menu_item', :collection=>@menu.menu_items

=link_to "Add Item", new_menu_menu_item_path(@menu)
