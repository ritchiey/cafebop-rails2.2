!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Cafebop")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'start/jquery-ui-1.7.2.custom.css'
    = stylesheet_link_tag 'application' 
    = javascript_include_tag 'jquery-1.3.2.min.js', 'jquery-ui-1.7.2.custom.min.js', 'hobo-jquery.js', 'application.js'
    = yield(:head)
  
  %body 
  #ajax-progress
    %div
      %span#ajax-progress-text
  .header.page-header
    .account-nav


  .page-content    
    #container
      
      - flash.each do |name, msg|        
        = render :partial => 'shared/notice', :object=>msg

            
      = yield
  =render :partial => 'shared/page_footer'
