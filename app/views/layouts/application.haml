!!! String

%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title= h(yield(:title) || "Cafebop")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    = stylesheet_link_tag "blueprint/screen", "jquery.countdown", :media=>'screen'
    = stylesheet_link_tag 'start/jquery-ui-1.7.2.custom.css', "formtastic", "formtastic_changes", 'application', :cache=>true
    = stylesheet_link_tag "blueprint/print", "print", :media=>'print', :cache=>true
    = javascript_include_tag 'jquery-1.3.2.min.js', 'jquery-ui-1.7.2.custom.min.js', 'jrails', 'jquery.countdown.min', 'application.js'
    / [if lt IE 8]><link rel="stylesheet" href="/stylesheets/blueprint/ie.css" type="text/css" media="screen, projection"><![endif]   
    =javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? 
    = yield(:head)

  %body{:style=>"background: #{page_background}"}
    .container
      #header.page-header.span-24.last
        .span-18
          =placeholder(:size=>'144x72')
        .span-6.last
          =render :partial=>'layouts/account_nav'

      #content.span-16.last
        -default_content_for :content do
          #content-header.span-16{:style=>"background: #{header_background}"}
            -default_content_for :content_header do
              =placeholder :width=>1, :height=>180
            
          #content-body.span-16.last
            - unless flash.empty?
              .flash
                - if flash[:notice]
                  #notice
                    =flash[:notice]
                - if flash[:warning]
                  #warning
                    =flash[:warning]
                - if flash[:error]
                  #error
                    =flash[:error]
            -default_content_for :content_body do
              #main.span-16.last
                .span-1=placeholder
                .span-15.last
                  =yield
              .span-16.last
                =placeholder :height=>54
                
      #side.span-8.last.no-print
        .span-8.last
          =placeholder :width=>1, :height=>180
        #aside.span-8.last
          =yield :aside || placeholder

    #page-footer
      .container
        .span-1
          =placeholder :width=>1, :height=>99
        .span-23.last 
          =link_to(image_tag('logo.png', :size=>'200x90'), root_path)
          

    =yield :javascript
