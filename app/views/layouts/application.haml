!!! String

%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title= h(yield(:title) || "Cafebop")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    = stylesheet_link_tag "blueprint/screen.css", :media=>'screen'
    = stylesheet_link_tag "blueprint/print.css", :media=>'print'
    = stylesheet_link_tag 'start/jquery-ui-1.7.2.custom.css'
    = stylesheet_link_tag "formtastic"
    = stylesheet_link_tag "formtastic_changes"
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'jquery-1.3.2.min.js', 'jquery-ui-1.7.2.custom.min.js', 'jrails', 'application.js'
    / [if lt IE 8]><link rel="stylesheet" href="/stylesheets/blueprint/ie.css" type="text/css" media="screen, projection"><![endif]   
    =javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? 
    = yield(:head)

  %body
    .container
      #header.span-24.last
        .span-18
          =shop_with_header? ? link_to(image_tag('logo.png', :size=>'144x72'), root_path) : placeholder(:size=>'144x72')
        .span-6.last
          =render :partial=>'layouts/account_nav'

      #content.span-24.last  
        -default_content_for :content do
          #content-header.span-24.last{:style=>"background: #{header_background}"}
            -default_content_for :content_header do
              .span-1
                =placeholder :width=>1, :height=>180
              .span-23.last
                =%q/"I'm going to the shop. Want anything?"/
          #content-body.span-24.last
            - unless flash.empty?
              .flash
                - if flash[:notice]
                  #notice
                    =flash[:notice]
                - if flash[:warning]
                  #warning
                    =flash[:warning]
                - if flash[:error]
                  #error
                    =flash[:error]
            -default_content_for :content_body do
              #main.span-16 
                .span-1=placeholder
                .span-15.last=yield
              #aside.span-8.last
                =yield :aside || placeholder

      #footer.span-24.last
        = yield :footer || placeholder    
        

    =yield :javascript
