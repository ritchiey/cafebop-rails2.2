- semantic_form_for @cuisine do |f|
  -f.inputs do
    = f.input :name
    = f.input :franchise, :hint=>"This is a franchise (eg Subway) rather than a generic cuisine type"
    = f.input :menus, :as=>:check_boxes, :collection=>Menu.generic, :hint=>"Which generic menus are implied by this cuisine"
    = f.buttons
