- title "Cuisine"

%p
  %strong Name:
  =h "#{@cuisine.name}"

%p
  %strong Type:
  =h @cuisine.franchise ? 'franchise' : 'cuisine'

%p
  %strong Generic Menus:
  %ul
  -@cuisine.menus.each do |menu|
    %li=link_to menu.name, edit_menu_path(menu)

%p
  = link_to "Edit", edit_cuisine_path(@cuisine)
  |
  = link_to "Destroy", @cuisine, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", cuisines_path
